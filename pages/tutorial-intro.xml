<page
  id="tutorial-intro"
  bg_color="#1a1a2e"
  bg_image="tech-bg-lab.png"
  bg_music="osts-stage.mp3"
>
  <!-- Título Principal -->
  <agent
    id="titulo-principal"
    x="200"
    y="20"
    text="🎓 Academia do fab-if: Lógica Condicional"
    color="#00ff88"
    font-size="22"
    animation="typewriter"
  />

  <!-- Professor Robô -->
  <agent
    id="professor"
    x="50"
    y="150"
    image="tech-acid-1.png"
    width="120"
    animation="glow"
  />

  <!-- Narrativa do professor -->
  <agent
    id="fala-professor-1"
    x="200"
    y="120"
    text="Olá, jovem programador! Sou o Professor Bot."
    color="#ffffff"
    font-size="16"
    animation="typewriter"
  />

  <agent
    id="fala-professor-2"
    x="200"
    y="150"
    text="Hoje vou te ensinar o poder do fab-if!"
    color="#ffffff"
    font-size="16"
    animation="typewriter"
  />

  <!-- Explicação narrativa -->
  <agent
    id="narrativa-1"
    x="50"
    y="300"
    text="O fab-if é como uma porta mágica..."
    width="200"
    font-size="18"
    animation="typewriter"
  />

  <agent
    id="narrativa-2"
    x="50"
    y="345"
    width="200"
    text="Ela só se abre quando a condição é verdadeira!"
    color="#ffff99"
    font-size="18"
    animation="typewriter"
  />

  <agent
    id="narrativa-3"
    x="50"
    y="390"
    width="200"
    text="Se a condição for falsa, os elementos ficam invisíveis."
    color="#cccccc"
    font-size="14"
    animation="typewriter"
  />

  <!-- Exemplo visual simples -->
  <agent
    id="exemplo-titulo"
    x="400"
    y="300"
    text="👀 Exemplo Simples:"
    color="#ff6b6b"
    font-size="16"
    animation="typewriter"
  />

  <!-- Botão para demonstração -->
  <agent
    id="botao-demo"
    x="400"
    y="350"
    text="Clique aqui!"
    color="#ffffff"
    font-size="14"
    animation="hover-bounce"
    on_click="set(progresso, 1)"
  />

  <!-- Este texto só aparece quando progresso = 1 -->
  <fab-if when="$progresso = 1">
    <agent
      id="texto-aparece"
      x="500"
      y="350"
      text="🎉 Eu apareci!"
      color="#00ff00"
      font-size="14"
      animation="bounce-in"
    />
  </fab-if>

  <!-- Explicação técnica -->
  <agent
    id="explicacao-tecnica"
    x="400"
    y="400"
    text="Isso aconteceu porque progresso = 1"
    color="#87CEEB"
    font-size="12"
    animation="typewriter"
  />

  <!-- Navegação -->
  <agent
    id="proximo"
    x="300"
    y="500"
    text="➡️ Próxima Lição: Comparações"
    color="#87CEEB"
    font-size="16"
    animation="hover-glow"
    on_click="goToPage('tutorial-comparacao')"
  />

  <!-- Progresso -->
  <agent
    id="progresso-intro"
    x="20"
    y="20"
    text="Progresso: 1/7"
    color="#888888"
    font-size="12"
  />
</page>
